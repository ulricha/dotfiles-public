color indicator black red
mono  indicator bold
color status black blue
color message white black
color error red black

color normal white black
color quoted brightgreen black
mono  quoted bold
color quoted1 brightcyan black
mono  quoted1 underline
color quoted2 brightmagenta black
color quoted3 brightblue black
color quoted4 blue black
color quoted5 brightblack black

color tree green black
color tilde brightblack black 
color markers brightblack black
color attachment red black
color search black yellow
color underline green black

color hdrdefault white blacK
color header brightred black ^from
color header green black ^date
mono  header bold ^from
color header red black ^mail-followup-to
color header red black ^reply-to
color header brightwhite black ^to
color header white black ^cc
color header brightyellow black ^subject
color header brightmagenta black ^x-mailer
color header brightmagenta black ^x-newsreader
color header brightmagenta black ^user-agent
color header brightblack black ^x-spam-level
color header brightblack black ^x-spam-status
color header red black ^x-no-archive
color header red black ^x-injected-via-gmane

color body magenta black "(ftp|http)://[^ ]+" # point out URLs
mono  body bold          "(ftp|http)://[^ ]+" 
color body magenta black [-a-z_0-9.]+@[-a-z_0-9.]+  # e-mail addresses
mono  body bold          [-a-z_0-9.]+@[-a-z_0-9.]+  
color body brightwhite  black "(^|[[:space:]])_[^[:space:]]+_([[:space:]]|$)" # _Underlined_ text
mono  body underline          "(^|[[:space:]])_[^[:space:]]+_([[:space:]]|$)" 
color body brightwhite  black "(^|[[:space:]])\\*[^[:space:]]+\\*([[:space:]]|$)" # *Bold* text
mono  body bold               "(^|[[:space:]])\\*[^[:space:]]+\\*([[:space:]]|$)" 
color body brightwhite  black "(^|[[:space:]])/[^[:space:]]+/([[:space:]]|$)" # /Italic/ text
mono  body bold               "(^|[[:space:]])/[^[:space:]]+/([[:space:]]|$)" 

color signature brightblack black

## Some colors to mark status
color index yellow		black	~F # Flagged
color index green		black	~N # New
mono  index bold                        ~N # New
color index yellow	black	~O # Unread
color index magenta		black	~T # Tagged
mono  index reverse                     ~T # Tagged

## This gives color to scored messages.
#color index blue black '(~n 1-1)'
#color index cyan black '(~n 2-2)'
#color index yellow black '(~n 3-3)'
#color index red black '(~n 4-4)'
#color index red black '(~n 5-5)'
#color index blue black '(~n 6-6)'
#color index brightyellow black '(~n 7-7)'
#color index white black '(~n 8-9)'
#color index brightred black '(~n 10-99)'

color index brightblack black "~n 0-3"	# uninteresting
color index red black "~n 6-9"		# interesting
color index brightyellow black "~n 25-25"	# Flagged
color index brightred black "~n 10-20"	# really important

#lets paint those MAILER-MESSAGES a bit.
color index yellow black ~fMAILER-DAEMON@*
color index yellow black ~fMailer-Daemon@*

#Should be last. So it gets the highest priority.
color index blue		black	~D # Deleted
mono  index reverse                     ~D # Deleted
